<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.alphabet.AlphabetFragment"
    >

    <LinearLayout
        android:id="@+id/toolbar"
        android:background="@drawable/backround_toolbar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_alphabet"
            android:layout_gravity="center"
            android:textSize="20sp"
            android:fontFamily="@font/lato_regular"
            android:textColor="@color/white"
            android:layout_marginStart="16dp" />

    </LinearLayout>

    <ImageView
        android:id="@+id/iv_sign"
        android:layout_width="250dp"
        android:layout_height="280dp"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintStart_toStartOf="parent"
        android:foreground="@drawable/background_image_sign"
        android:layout_marginVertical="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/a" />

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/iv_sign"
        android:background="@color/purple_200" />

    <ImageView
        android:id="@+id/tv_prev"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:padding="10dp"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="@id/tv_word"
        app:layout_constraintBottom_toBottomOf="@id/tv_word"
        app:layout_constraintEnd_toStartOf="@id/tv_word"
        android:src="@drawable/ic_back"
        android:textSize="64sp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:textColor="@color/color_text"
        android:layout_marginEnd="16dp" />

    <TextView
        android:id="@+id/tv_word"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/lato_regular"
        android:layout_marginTop="32dp"
        android:text="Ð"
        android:textColor="#7423F8"
        android:textSize="148sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/line" />

    <ImageView
        android:id="@+id/tv_next"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:padding="10dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        app:layout_constraintTop_toTopOf="@id/tv_word"
        app:layout_constraintBottom_toBottomOf="@id/tv_word"
        app:layout_constraintStart_toEndOf="@id/tv_word"
        android:src="@drawable/ic_back"
        android:rotation="180"
        android:textSize="64sp"
        android:textColor="@color/color_text"
        android:layout_marginStart="16dp" />

</androidx.constraintlayout.widget.ConstraintLayout>